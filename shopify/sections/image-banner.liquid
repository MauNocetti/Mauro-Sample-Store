{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<div class="banner">
  {%- if section.settings.image != blank -%}
    <div class="banner__media media">
      <img
        srcset="{%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url }} 375w,{%- endif -%}
          {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url }} 750w,{%- endif -%}
          {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url }} 1100w,{%- endif -%}
          {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url }} 1500w,{%- endif -%}
          {%- if section.settings.image.width >= 1780 -%}{{ section.settings.image | image_url }} 1780w,{%- endif -%}
          {%- if section.settings.image.width >= 2000 -%}{{ section.settings.image | image_url }} 2000w,{%- endif -%}
          {%- if section.settings.image.width >= 3000 -%}{{ section.settings.image | image_url }} 3000w,{%- endif -%}
          {%- if section.settings.image.width >= 3840 -%}{{ section.settings.image | image_url }} 3840w,{%- endif -%}"
        sizes="100vw"
        src="{{ section.settings.image | image_url }}"
        loading="lazy"
        alt="{{ section.settings.image.alt | escape }}"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.width | divided_by: section.settings.image.aspect_ratio }}"
      >
    </div>
  {%- endif -%}

  <div class="banner__content w-full flex {{ section.settings.vertical_alignment }} {{ section.settings.horizontal_alignment }}">
    <div class="banner__box relative text-center">
      {%- if section.settings.eyebrow != blank -%}
        <h4 class="banner__eyebrow font-medium">{{ section.settings.eyebrow | escape }}</h4>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="banner__heading font-bold">{{ section.settings.heading | escape }}</h1>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="banner__text">
          {{ section.settings.text }}
        </div>
      {%- endif -%}

      <div class="banner__buttons flex justify-between mt-6 flex-wrap lg:flex-nowrap">
        {%- if section.settings.button_label_1 != blank -%}
          <a{% if section.settings.button_link_1 != blank %} href="{{ section.settings.button_link_1 }}"{% endif %} class="btn"{% if section.settings.button_link_1 == blank %} aria-disabled="true"{% endif %}>{{ section.settings.button_label_1 | escape }}</a>
        {%- endif -%}
        {%- if section.settings.button_label_2 != blank -%}
          <a{% if section.settings.button_link_2 != blank %} href="{{ section.settings.button_link_2 }}"{% endif %} class="btn"{% if section.settings.button_link_2 == blank %} aria-disabled="true"{% endif %}>{{ section.settings.button_label_2 | escape }}</a>
        {%- endif -%}
        {%- if section.settings.button_label_3 != blank -%}
          <a{% if section.settings.button_link_2 != blank %} href="{{ section.settings.button_link_3 }}"{% endif %} class="btn"{% if section.settings.button_link_3 == blank %} aria-disabled="true"{% endif %}>{{ section.settings.button_label_3 | escape }}</a>
        {%- endif -%}
        {%- if section.settings.button_label_4 != blank -%}
          <a{% if section.settings.button_link_2 != blank %} href="{{ section.settings.button_link_4 }}"{% endif %} class="btn"{% if section.settings.button_link_4 == blank %} aria-disabled="true"{% endif %}>{{ section.settings.button_label_4 | escape }}</a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

